{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"lib": ["esnext"],
		"noImplicitAny": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"include": ["src/**/*"]
}
